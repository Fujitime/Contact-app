<div class="container mt-3 ">
    <div class="row">
        <div class="col-md-6">
            <h2>Form ubah data contact</h2>

            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach( error => { %>
                    <li> <%= error.msg %>  </li>
                  <% }) %>
                </ul>
              </div>
            <% } %>

            <form method="post" action="/contact?_method=PUT">
              <input type="hidden" name="_id" value="<%= contact._id %>">
              <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama</label>
                  <input type="text" required class="form-control" id="nama" name="nama" value="<%= contact.nama %>">
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" required class="form-control" id="email" name="email" value="<%= contact.email %>">
                </div>
                <div class="mb-3">
                  <label for="hp" class="form-label">No HP</label>
                  <input type="number" required class="form-control" id="hp" name="hp" value="<%= contact.hp %>">
                </div>
                <button type="submit" class="btn btn-primary">Ubah data contact</button>
              </form>
        </div>
    </div>
</div>